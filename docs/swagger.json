                    "format": "style"
                  },
                  "genre": {
                    "type": "string"
                  },
                  "categories": {
                    "type": "string"
                  },
                  "thumbnail": {
                    "type": "string",
                    "format": "uri"
                  },
                  "pageCount": {
                    "type": "integer"
                  },
                  "averageRating": {
                    "type": "integer"
                  },
                  "amount": {
                    "type": "number"
                  },
                  "currencyCode": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "get": {

    "/v1/users/{userId}/recently-viewed": {
      "parameters": [],
      "post": {
        "summary": "Update recently viewed books",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "example": "123",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "_id": {
                    "type": "string"
                  },
                  "title": {
                    "type": "string"
                  },
                  "authors": {
                    "type": "string"
                  },
                  "publishedDate": {
                    "type": "string",
                    "format": "date"
